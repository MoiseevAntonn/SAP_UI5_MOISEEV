<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >

   <Popover
   	  id="massInputPopover"
   	  showHeader="false"
   	  contentHeight="auto"
   	  class="sapUiSizeCompact">
		<HBox>
			<Input
				id="massInput"
				value="{fragmentModel>/MassInput/value}"
				class=""/>
			<Button
				icon="sap-icon://multi-select"
				press="getMassDataFromEvent"
				class="sapUiTinyMarginBegin"/>
		</HBox>
		
   	</Popover>
</core:FragmentDefinition>