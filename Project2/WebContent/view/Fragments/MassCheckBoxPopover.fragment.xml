<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >

   <Popover
		id="massCheckBoxPopover"
		showHeader="false"
		class="sapUiSizeCompact">
		
		<HBox
			justifyContent="SpaceAround">
			<CheckBox
				selected="{fragmentModel>/MassCheckBox/selected}"
				id="massCheckBox"/>
				
			<Button
				icon="sap-icon://multi-select"
				press="getMassDataFromEvent"/>
		</HBox>
   	</Popover>
</core:FragmentDefinition>