<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >

   <Popover
   	  id="filterPricePopover"
   	  showHeader="false"
   	  contentWidth="250px"
   	  contentHeight="auto"
   	  class="selectPopoverStyle"
   	  >
		<content>
			<Select
			id="selectFieldFilterOperation"
			forceSelection="false"
			class="selectFieldPopoverStyle"
			width="90%"
			valueStateText="Set operation">
				<core:Item key="EQ" text="equals" />
				<core:Item key="GE" text="greater or equals" />
				<core:Item key="LE" text="less or equals" />		
			</Select>
			
			<Input
			class="inputFieldPopoverStyle"
			width="90%"
			type="Number"
			placeholder="Enter price"/>
			
			<Button
			class="buttonFieldPopoverStyle"
			width="30%"
			icon="sap-icon://add-filter"
			press="onFilterCategories"
			/>
		</content>
		
   	</Popover>
</core:FragmentDefinition>