<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >

   <Popover
   	  id="checkBoxPopover"
   	  showHeader="false"
   	  class="sapUiSizeCompact">
		<HBox
			justifyContent="SpaceAround">
			<CheckBox
				id="filterCheckBox" 
				selected="{fragmentModel>/FilterCheckBox/selected}"
				class=""/>
			<Button
				icon="sap-icon://add-filter"
				press="getFilterDataFromEvent"
				class=""/>
   		</HBox>
   		</Popover>
</core:FragmentDefinition>