   <Popover
   	  id="popoverAddress"
   	  title="{employees>FirstName}`s address"
   	  contentWidth="300px"
   	  contentHeight="auto"
   	  >
   	  
   	  <QuickViewCard id="quickViewCard" 
			navigate="onNavigate"
			afterNavigate="onAfterNavigate">
			<QuickViewPage>
				<QuickViewGroup >
					<QuickViewGroupElement
							label="Adress"
							value="{employees>Address}"
							>
					</QuickViewGroupElement>
					<QuickViewGroupElement
							label="City"
							value="{employees>City}"
							>
					</QuickViewGroupElement>
					<QuickViewGroupElement
							label="Country"
							value="{employees>Country}"
							>
					</QuickViewGroupElement>
				</QuickViewGroup>
			</QuickViewPage>
		</QuickViewCard>
		
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					text="Close"
					press=".onClosePopover" />
			</Toolbar>
		</footer>
   	</Popover>
</core:FragmentDefinition>