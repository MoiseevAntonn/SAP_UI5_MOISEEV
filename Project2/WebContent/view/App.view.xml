<mvc:View
	controllerName="sap.ui.task.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	displayBlock="true">
	
		<Toolbar >
			<Title text="{i18n>ToolbarTitle}"/>
			<ToolbarSpacer/>
			<Select
			id="selectLanguage"
			forceSelection="true"
			valueStateText="Set language">
				<core:Item key="RUS" text="RUS" />
				<core:Item key="ENG" text="ENG" />		
			</Select>
		</Toolbar>
		
		<App id="app" class="disableScroll" />
		
</mvc:View>